@model IEnumerable<PowershellScriptConsumeMVC.Models.MsgModel>

<div>
    <table class="table table-responsive table-bordered">
        <thead>
            <tr>
                <td>#</td>
                <td>LookupId</td>
                <td>Lable</td>
                <td>Id</td>
                <td>Response queue</td>
                <td>MessageBody</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr class="row">
                @Html.HiddenFor(modelItem => item.Response, new { @id = "hdnRsp" + item.LookupId })
                <td>
                    @Html.DisplayFor(modelItem => item.LookupId, new { @class = "form-control" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lable, new { @class = "form-control" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id, new { @class = "form-control" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Response, new { @class = "form-control" })
                </td>
                <td>
                    @Html.TextAreaFor(modelItem => item.MessageBody, new { @class = "form-control" ,@id="txtMsgBody"+ item.LookupId })
                </td>
                <td>
                    <input type="button" class="btn btn-success btnsub" id="btn_@item.LookupId" value="submit" />
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#messageModal" data-id="@item.LookupId">View</button>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal fade" id="messageModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="exampleModalLabel">New message</h4>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="recipient-name" class="control-label">Recipient:</label>
            <input type="text" class="form-control" id="txtLookupID" readonly>
          </div>
          <div class="form-group">
              <label for="message-text" class="control-label">Message:</label>
              <textarea class="form-control" id="txtMessageBody"></textarea>
              <label for="message-data" id="lblresponsequeue" hidden></label>
              <label for="message-data" id="lblRecipent" hidden></label>
          </div>
            
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Send message</button>
      </div>
    </div>
  </div>
</div>
